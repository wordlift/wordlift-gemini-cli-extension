{
    "name": "wordlift-gemini-extension",
    "version": "1.1.0",
    "description": "Build and manage WordLift Knowledge Graphs with GS1 Digital Link IDs, SHACL validation, and automated sync workflows",
    "publisher": "WordLift",
    "repository": "https://github.com/wordlift/wordlift-gemini-cli-extension",
    "tags": [
        "wordlift",
        "knowledge-graph",
        "seo",
        "mcp",
        "rdf",
        "linked-data"
    ],
    "installScript": "./install.sh",
    "mcpServers": {
        "wordlift": {
            "command": "${extensionPath}/venv/bin/python",
            "args": [
                "${extensionPath}/server.py"
            ],
            "cwd": "${extensionPath}",
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        }
    }
}